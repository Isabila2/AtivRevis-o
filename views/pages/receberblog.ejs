<!DOCTYPE html>
<html lang="ptbr">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
        <% if(req.session.loggedin) { %>
        <%- include('../partials/menu_dashboard'); %>
        <% } %>        
    </header>

    <main>
        <div class="row">
            <div class="col-sm-12" >
                <div class="jumbotron">
                    <h1>Site de Revisão - Isabella</h1>
                    <p>Mais flores para vocês, amadinhos.</p>
                </div>
            </div>

            <div class="col-sm-4">
     
            </div>
        </div>
    </main>
    <div> 
        <div> 
            <form action="/fazerblog" method="POST">
            <h1>Comentários</h1>
            <% if (comentario && comentario.length > 0) { %>
            <ul>
            <% comentario.forEach(comentario => { %>
            <li>
              <strong>Usuário:</strong> <%= comentario.usuario %><br>
              <strong>Comentário:</strong> <%= comentario.comentario %>
            </li>
            <% }); %>
            
            </ul>
            <% } else { %>
              <p>Nenhum comentário ainda aqui hehehe</p>
            <% } %>
            
            <label for="comentario">Comentário:</label>
            <textarea name="comentario" required></textarea>
            <button type="submit">Criar comentário</button>
            
             
            
            
            </div>
        
         </form>
        
        
        </div>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>